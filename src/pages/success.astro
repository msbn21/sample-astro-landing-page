---
import Layout from "../layouts/Page.astro";
import Container from "../components/Container.astro";
import SignupForm from "../components/SignupForm.astro";

const seo = {
  title: "Cannonball by Little Sticks | A splash page template",
  description:
    "This is a simple splash page template built with Astro by Little Sticks",
};
---

<style>
  .hero__article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container narrow>
    <article class="hero__article">
      <h1 class="fade-in">Coming Soon</h1>
      <p class="fade-in">You're succesfully subscribed to our emails</p>
      <p>Go back to <a href="/sample-astro-landing-page/">home</a></p>
    </article>
  </Container>
</Layout>
